<button class="close" id="stars-for-user-<%= profile_user.id %>">
	<span class="small text-danger">
		<% if Star.find_by(donor_id: current_user.id, recipient_id: profile_user.id) %>
			<span class="glyphicon glyphicon-star" aria-hidden="true"></span>
		<% else %>
			<span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
		<% end %>


		<%= Star.where(recipient_id: profile_user.id).count %>
	</span>
</button>
