<div id="filterrific_results">

  <% @jam_sessions.each do |session| %>
    <br>
    <div class='row'>
      <div class='col-sm-12' style="float:left">

      <%= image_tag User.find(id=session.host_id).avatar.url(:thumb) %>
       <%= link_to session.name, "#modal-for-jam_session\\:#{session.id}", "data-toggle" => "modal" %>
       <%= link_to "#modal-for-chat_message\\:#{session.id}", class: "btn", "data-toggle" => "modal" do %>
         <span class="glyphicon glyphicon-comment" aria-hidden="true"></span>
<% end %>
 <%= link_to  "#modal-for-jam_session\\:#{session.id}", class: "btn", "data-toggle" => "modal" do %>
<span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
<% end %>
      </div>

    </div>
  <%end%>
  <%= will_paginate @jam_sessions %>
</div>
