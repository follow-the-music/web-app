<div class="container" style="padding:15px; width:100%; ! important;">
<div class="row" style-"">


  <% @jam_sessions.each do |session| %>
    <br>
    <div class="row" style="border:1px solid #cecece;padding: 15px; box-shadow: -1px 1px 4px #888888; vertical-align:middle;">

  <div class="col-sm-4 col-md-4 col-lg-4"  style="padding:10px; position:relative; justify-content:space-between;">
    <span>
    <% host = User.find(session.host_id) %>
    <%= render 'users/user_profile_modal', user: host %>
    <%= link_to image_tag(User.find(id=session.host_id).avatar.url(:thumb)), :style => "width:100%; float:left;" "#modal-for-user-#{host.id}", "data-dismiss" => "modal",  "data-toggle" => "modal"%>
  </span>
      <% if host.id == current_user.id %>
        <span class="glyphicon glyphicon-home" aria-hidden="true"style="padding-right:3px;vertical-align:middle;">  </span>
      <% else %>
      <% end %>
      <%name=session.name%>
      <%= link_to  "#modal-for-jam_session\\:#{session.id}", "data-toggle" => "modal" do %>
      <p class="break-word" style="display:inline;vertical-align:middle;text-align:center;width:50px;"> <b> <%=name%></b></p>
  <% end %>


</div>
<div class = "col-sm-2 col-md-2 col-lg-2"  style="vertical-align:middle;">
  <%= link_to "#modal-for-chat_message\\:#{session.id}", class: "btn", "data-toggle" => "modal" do %>
    <span class="glyphicon glyphicon-comment" aria-hidden="true" style="font-size: 20px;vertical-align:middle;height:1px;">  </span>
  <% end %>
  <%= link_to  "#modal-for-jam_session\\:#{session.id}", class: "btn", "data-toggle" => "modal" do %>
  <span class="glyphicon glyphicon-info-sign" aria-hidden="true" style="font-size: 20px;vertical-align:middle;height:1px;">  </span>
  <% end %>

</div>
<div class = "col-sm-1 col-md-1 col-lg-1"  style="vertical-align:middle;">
  <%if (session.audio_file_file_name != nil) %>
    <audio controls style="width: 150px; color:green;vertical-align:middle; background: white;height:45px; float:left;">
    <source src="<%= session.audio_file %>" type="audio/mp3" style="vertical-align:middle;height:5px;">
    </audio>
  <%end%>
</div>
<div class="col-sm-5 col-md-5 col-lg-5" style="text-align:right; color: #6A6A6A;vertical-align:middle;">
  <div class="row">
  <%address=session.address%>
  <%if (!address.blank?)%>
    <%=address%>
      <span class="glyphicon glyphicon-map-marker" aria-hidden="true">  </span>
  <%end%>
</div>
  <div class="row">
    <%start_t=session.start_time%>
    <%end_t=session.end_time%>
    <%if (!start_t.blank?)%>
      <%=start_t.strftime("%I:%M %p")%> -
    <%end%>
    <%if (!end_t.blank?)%>
      <%=end_t.strftime("%I:%M %p")%>
          <span class="glyphicon glyphicon-time" aria-hidden="true">  </span>
    <%end%>
  </div>
  <div class="row">
    <%genre=session.genre%>
      <%if (!genre.blank?)%>
        <%=genre%>
                <span class="glyphicon glyphicon-music" aria-hidden="true">  </span>
          <%end%>
  </div>
</div>


    </div>
  <%end%>
</div>
</div>
