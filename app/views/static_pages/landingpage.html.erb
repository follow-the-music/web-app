      <%= link_to 'Get Started!', "#login-modal", :class => "btn", "data-toggle" => "modal", class: "myButton"%>
    <% end %>
    </div>
  </div>
  <div class="row">
    <div class="row2">
      <h1 style="color:black; font-size:60px;">Discover Our Music</h1>
