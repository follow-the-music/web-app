                  <span class="input-group-btn">
                      <button class="btn btn-danger" type="button">
                          <span class=" glyphicon glyphicon-search">

                          </span>
                      </button>
                  </span>
              </div>
          </div>
    	</div>
    </div>
    <br><br><br>
    <% if logged_in? %>
      <%= link_to 'Get Started!',jam_sessions_path, class: "myButton"%>
